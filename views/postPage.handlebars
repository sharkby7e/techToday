    <link href="../css/style.css" rel="stylesheet" />
<h2 class="blue-grey-text text-darken-3">{{title}}</h2>
<div class="row">
  <div class="col s12 ">
    <div class="card amber lighten-5">
      <div class="card-content teal-text text-darken-4">
        <p style="font-size: 1.5rem;">{{body}}</p>
      </div>
      <div class="card-content">
        <p>Posted by {{user.name}} on {{format_date date_created}}</p>
      </div>
    </div>
  </div>
</div>
{{#if logged_in}}
<h3>Add a comment</h3>
<div class="row">
  <form id = "commentForm" class="col s12">
    <div class="row">
      <div class="input-field col s12">
        <textarea id="commentInput" class="materialize-textarea"></textarea>
        <label for="textarea1">This post is cool...</label>
      </div>
    </div>
  <button id = "commentSubmit" class="btn waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons right">send</i>
  </button>
  </form>
</div>
<script src="../js/comment.js"></script>
{{/if}}

<h3>Comments</h3>
{{#each comments }}
{{> commentPartial}}
{{/each}}
